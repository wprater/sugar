<% 
	add_body_class "edit_post"
	@page_title = "Edit post" 
%>

<% unless request.xhr? %>
<h2 class="section">
	<%= link_to @discussion.category.name, category_path(@discussion.category) %> &raquo;
	<% if @discussion.labels? %>[<%= @discussion.labels.join(",") %>]<% end %>
	<%= link_to @discussion.title, discussion_path(@discussion) %> &raquo;
	<%= link_to "Edit post", edit_discussion_post_path(@discussion,@post) %>
</h2>
<% end %>

<%= form_for(@post, :url => discussion_post_path(@discussion,@post), :html => { :'data-tb-imageupload' => true }) do |f| %>
  <%= hidden_field_tag 'object_name', f.object_name %>
  <%= hidden_field_tag 'post_id', @post.id %>
	<p>
		<%= f.text_area(:body, :cols => 80, :rows => 20, :id => "edit-post-body-#{@post.id}", :class => :rich) %>
	</p>
	<p><button type="submit">Save</button></p>
<% end %>